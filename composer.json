{
    "name": "Blog",
    "homepage": "http://www.zalas.eu",
    "authors": [
        {
            "name": "Jakub Zalas",
            "email": "jakub@zalas.pl"
        }
    ],
    "require": {
        "php":              ">=5.3.2",
        "symfony/symfony":  ">=2.0.12,<2.1.0-dev",
        "doctrine/orm":     ">=2.1.0,<2.2.0-dev",
        "twig/extensions":  "*",

        "symfony/assetic-bundle":         "2.0.*",
        "sensio/generator-bundle":        "2.0.*",
        "sensio/framework-extra-bundle":  "2.0.*",
        "sensio/distribution-bundle":     "2.0.*",
        "jms/security-extra-bundle":      "1.0.*",

        "polishsymfonycommunity/blog-bundle": "*"
    },
    "require-dev": {
        "behat/behat":           "2.3.*",
        "behat/mink":            "1.3.*",
        "behat/behat-bundle":    "*",
        "behat/mink-bundle":     "*",
        "behat/common-contexts": "*"
    },
    "repositories": {
        "behat/mink-deps": { "type": "composer", "url": "behat.org" }
    },
    "autoload": {
        "psr-0": { "Zalas": "src/" }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
